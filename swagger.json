{
    "openapi": "3.0.0",
    "info": {
        "title": "Infowatch",
        "contact": {
            "email": "support@example.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "для локального использования"
        }
    ],
    "paths": {
        "/api/files": {
            "post": {
                "tags": ["files"],
                "description": "Получение статистики о файлах",
                "requestBody": {
                    "$ref": "#/components/requestBodies/files"
                },
                "responses": {
                    "200": {
                        "description": "Показать файлы",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "name": {
                                                        "type": "string",
                                                        "description": "Название сервера",
                                                        "example": "Asterisk"
                                                    },
                                                    "data": {
                                                        "type": "object",
                                                        "properties": {
                                                            "server_from": {
                                                                "type": "integer",
                                                                "example": 10,
                                                                "description": "количество файлов на сервере"
                                                            },
                                                            "download": {
                                                                "type": "string",
                                                                "example": 10,
                                                                "description": "Количество загруженных файлов с сервера"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "requestBodies": {
            "files": {
                "content": {
                    "multipart/form-data": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "date_from": {
                                    "type": "string",
                                    "example": "2022-05-10 22:22:00"
                                },
                                "date_to": {
                                    "type": "string",
                                    "example": "2022-07-09 13:25:00"
                                },
                                "sort": {
                                    "type": "object",
                                    "properties": {
                                        "field": {
                                            "type": "string",
                                            "example": "name"
                                        },
                                        "direction": {
                                            "type": "string",
                                            "description": "ASC"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ]
}
